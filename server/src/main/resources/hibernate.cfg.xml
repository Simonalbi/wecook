<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/wecook</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">06102003</property>
        <!-- <property name="hibernate.connection.pool_size">1</property> -->

        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <mapping class="com.wecook.model.Comment"/>
        <mapping class="com.wecook.model.CommentReport"/>
        <mapping class="com.wecook.model.Ingredient"/>
        <mapping class="com.wecook.model.Like"/>
        <mapping class="com.wecook.model.ModeratorUser"/>
        <mapping class="com.wecook.model.Post"/>
        <mapping class="com.wecook.model.PostReport"/>
        <mapping class="com.wecook.model.Recipe"/>
        <mapping class="com.wecook.model.RecipeIngredient"/>
        <mapping class="com.wecook.model.Report"/>
        <mapping class="com.wecook.model.SavedPost"/>
        <mapping class="com.wecook.model.StandardUser"/>
        <mapping class="com.wecook.model.Step"/>
        <mapping class="com.wecook.model.User"/>

    </session-factory>
</hibernate-configuration>